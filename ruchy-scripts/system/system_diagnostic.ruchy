    match run_system_diagnostic() {
        Ok(info) => {
            // Check for JSON output flag
            let args: Vec<String> = std::env::args().collect();
            if args.contains(&"--json".to_string()) {
                println!("{}", system_info_to_json(&info));
            } else {
                println!("{}", format_human_readable(&info));
            }
        }
