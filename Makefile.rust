# Installation check
.PHONY: rust-check
rust-check: ## Check if Rust/Cargo is installed
	@if [ -z "$(CARGO)" ]; then \
		@echo "$(RED)‚ùå Cargo not found. Please install Rust first.$(NC)"; \
		@echo "$(YELLOW)üí° Visit: https://rustup.rs$(NC)"; \
		exit 1; \
	else \
		@echo "$(GREEN)‚úÖ Cargo found at: $(CARGO)$(NC)"; \
		$(CARGO) --version; \
		rustc --version; \
	fi

# Build targets
.PHONY: rust-build
rust-build: rust-check ## Build all binaries in debug mode
	@echo "$(CYAN)üî® Building debug binaries...$(NC)"
	@$(CARGO) build
	@echo "$(GREEN)‚úÖ Debug build complete!$(NC)"

.PHONY: rust-build-release
rust-build-release: rust-check ## Build all binaries in release mode
	@echo "$(CYAN)üî® Building release binaries...$(NC)"
	@$(CARGO) build --release
	@echo "$(GREEN)‚úÖ Release build complete!$(NC)"

.PHONY: rust-build-all
rust-build-all: rust-build rust-build-release ## Build both debug and release binaries

# Test targets
.PHONY: rust-test
rust-test: rust-check ## Run all tests
	@echo "$(CYAN)üß™ Running tests...$(NC)"
	@$(CARGO) test
	@echo "$(GREEN)‚úÖ All tests passed!$(NC)"

.PHONY: rust-test-verbose
rust-test-verbose: rust-check ## Run tests with verbose output
	@echo "$(CYAN)üß™ Running verbose tests...$(NC)"
	@$(CARGO) test -- --nocapture

.PHONY: rust-test-unit
rust-test-unit: rust-check ## Run unit tests only
	@echo "$(CYAN)üß™ Running unit tests...$(NC)"
	@$(CARGO) test --lib

.PHONY: rust-test-integration
rust-test-integration: rust-check ## Run integration tests only
	@echo "$(CYAN)üß™ Running integration tests...$(NC)"
	@$(CARGO) test --tests

.PHONY: rust-test-property
rust-test-property: rust-check ## Run property-based tests
	@echo "$(CYAN)üß™ Running property-based tests...$(NC)"
	@$(CARGO) test --features proptest

# Lint and format targets
.PHONY: rust-lint
rust-lint: rust-check ## Run Clippy linter
	@echo "$(CYAN)üîç Running Clippy linter...$(NC)"
	@$(CARGO) clippy --all-targets --all-features -- -D warnings
	@echo "$(GREEN)‚úÖ Linting complete!$(NC)"

.PHONY: rust-lint-strict
rust-lint-strict: rust-check ## Run strict Clippy linter with pedantic checks
	@echo "$(CYAN)üîç Running strict Clippy linter...$(NC)"
	@$(CARGO) clippy --all-targets --all-features -- -D warnings -D clippy::all -D clippy::pedantic -A clippy::module_name_repetitions -A clippy::too_many_lines -A clippy::missing_docs_in_private_items
	@echo "$(GREEN)‚úÖ Strict linting complete!$(NC)"

.PHONY: rust-security
rust-security: rust-check ## Run security audit
	@echo "$(CYAN)üîí Running security audit...$(NC)"
	@if command -v cargo-audit >/dev/null 2>&1; then \
		$(CARGO) audit; \
		@echo "$(GREEN)‚úÖ Security audit complete!$(NC)"; \
	else \
		@echo "$(YELLOW)‚ö†Ô∏è cargo-audit not installed. Install with: cargo install cargo-audit$(NC)"; \
	fi

.PHONY: rust-format
rust-format: rust-check ## Format code with rustfmt
	@echo "$(CYAN)üìù Formatting code...$(NC)"
	@$(CARGO) fmt
	@echo "$(GREEN)‚úÖ Code formatted!$(NC)"

.PHONY: rust-format-check
rust-format-check: rust-check ## Check code formatting
	@echo "$(CYAN)üìù Checking code format...$(NC)"
	@$(CARGO) fmt -- --check
	@echo "$(GREEN)‚úÖ Code format is correct!$(NC)"

# Coverage targets
.PHONY: rust-coverage
rust-coverage: rust-check ## Generate test coverage report
	@echo "$(CYAN)üìä Generating coverage report...$(NC)"
	@if command -v cargo-tarpaulin >/dev/null 2>&1; then \
		$(CARGO) tarpaulin --out Html --output-dir target/tarpaulin; \
		@echo "$(GREEN)‚úÖ Coverage report generated: target/tarpaulin/tarpaulin-report.html$(NC)"; \
	else \
		@echo "$(YELLOW)‚ö†Ô∏è cargo-tarpaulin not installed. Install with: cargo install cargo-tarpaulin$(NC)"; \
		@echo "$(YELLOW)   Falling back to basic test run...$(NC)"; \
		$(CARGO) test; \
	fi

.PHONY: rust-coverage-xml
rust-coverage-xml: rust-check ## Generate coverage in XML format
	@echo "$(CYAN)üìä Generating XML coverage report...$(NC)"
	@if command -v cargo-tarpaulin >/dev/null 2>&1; then \
		$(CARGO) tarpaulin --out Xml; \
		@echo "$(GREEN)‚úÖ XML coverage report generated: cobertura.xml$(NC)"; \
	else \
		@echo "$(YELLOW)‚ö†Ô∏è cargo-tarpaulin not installed$(NC)"; \
	fi

# Quality gates
.PHONY: rust-validate
rust-validate: rust-format-check rust-lint rust-test ## Run all quality checks
	@echo "$(GREEN)‚úÖ All quality checks passed!$(NC)"

.PHONY: rust-quality-gate
rust-quality-gate: rust-format-check rust-lint rust-security rust-test rust-coverage-check ## Comprehensive quality gate with security
	@echo "$(GREEN)üèÜ All quality gates passed!$(NC)"

.PHONY: rust-coverage-check
rust-coverage-check: rust-check ## Check coverage meets threshold (80%)
	@echo "$(CYAN)üìä Checking coverage threshold (80%)...$(NC)"
	@if command -v cargo-tarpaulin >/dev/null 2>&1; then \
		coverage=$$($(CARGO) tarpaulin --print=stdout | grep -E 'coverage.*%' | grep -oE '[0-9]+\.[0-9]+' | tail -1); \
		if [ -n "$$coverage" ]; then \
			@echo "Current coverage: $$coverage%"; \
			if [ "$$(echo "$$coverage >= 80" | bc -l)" -eq 1 ]; then \
				@echo "$(GREEN)‚úÖ Coverage threshold met ($$coverage% >= 80%)$(NC)"; \
			else \
				@echo "$(RED)‚ùå Coverage below threshold: $$coverage% < 80%$(NC)"; \
				exit 1; \
			fi; \
		else \
			@echo "$(YELLOW)‚ö†Ô∏è Could not parse coverage output$(NC)"; \
		fi; \
	else \
		@echo "$(YELLOW)‚ö†Ô∏è cargo-tarpaulin not installed - skipping coverage check$(NC)"; \
		@echo "$(YELLOW)   Install with: cargo install cargo-tarpaulin$(NC)"; \
	fi

.PHONY: rust-validate-ci
rust-validate-ci: rust-format-check rust-lint rust-test rust-coverage-xml ## Run CI quality checks
	@echo "$(GREEN)‚úÖ All CI quality checks passed!$(NC)"

# Clean targets
.PHONY: rust-clean
rust-clean: ## Clean build artifacts
	@echo "$(CYAN)üßπ Cleaning build artifacts...$(NC)"
	@$(CARGO) clean
	@rm -rf $(BUILD_DIR)
	@echo "$(GREEN)‚úÖ Clean complete!$(NC)"

# Deploy targets
.PHONY: rust-deploy
rust-deploy: rust-build-release ## Deploy binaries to dist directory
	@echo "$(CYAN)üì¶ Deploying binaries...$(NC)"
	@mkdir -p $(BUILD_DIR)/{system,audio,dev}
	@for bin in $(SYSTEM_BINS); do \
		if [ -f "$(RELEASE_DIR)/$$bin" ]; then \
			cp "$(RELEASE_DIR)/$$bin" "$(BUILD_DIR)/system/"; \
			@echo "$(GREEN)  ‚úÖ $$bin ‚Üí $(BUILD_DIR)/system/$(NC)"; \
		fi \
	done
	@for bin in $(AUDIO_BINS); do \
		if [ -f "$(RELEASE_DIR)/$$bin" ]; then \
			cp "$(RELEASE_DIR)/$$bin" "$(BUILD_DIR)/audio/"; \
			@echo "$(GREEN)  ‚úÖ $$bin ‚Üí $(BUILD_DIR)/audio/$(NC)"; \
		fi \
	done
	@for bin in $(DEV_BINS); do \
		if [ -f "$(RELEASE_DIR)/$$bin" ]; then \
			cp "$(RELEASE_DIR)/$$bin" "$(BUILD_DIR)/dev/"; \
			@echo "$(GREEN)  ‚úÖ $$bin ‚Üí $(BUILD_DIR)/dev/$(NC)"; \
		fi \
	done
	@echo "$(GREEN)‚úÖ Deployment complete!$(NC)"

.PHONY: rust-package
rust-package: rust-deploy ## Create distribution package
	@echo "$(CYAN)üì¶ Creating distribution package...$(NC)"
	@mkdir -p dist/packages
	@cd $(BUILD_DIR) && tar -czf ../packages/ubuntu-config-rust-$(shell date +%Y%m%d).tar.gz \
		system/ audio/ dev/
	@echo "$(GREEN)‚úÖ Package created: dist/packages/ubuntu-config-rust-$(shell date +%Y%m%d).tar.gz$(NC)"

# Development helpers
